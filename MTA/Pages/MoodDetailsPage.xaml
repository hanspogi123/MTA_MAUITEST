<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MTA.Pages.MoodDetailsPage"
             xmlns:vm="clr-namespace:MTA.ViewModels">

    <ContentPage.BindingContext>
        <vm:MoodDetailsViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <Label Text="Mood Details" FontSize="24" />
        <Label Text="{Binding MoodName}" FontSize="20" />
    </VerticalStackLayout>
</ContentPage>
